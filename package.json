{
  "name": "pink-pug",
  "version": "1.0.0",
  "description": "Проект на интенсиве HTML Academy «HTML и CSS. Адаптивная вёрстка и автоматизация»",
  "author": "Vadim Tiuriumin",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:owlrik/markup-pink-pug.git"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development gulp start",
    "build": "cross-env NODE_ENV=production gulp build",
    "deploy": "gulp deploy",
    "webp": "gulp webp",
    "imagemin": "gulp imagemin",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "editorconfig": "editorconfig-cli",
    "test": "npm run editorconfig && npm run stylelint"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^9.8.8",
    "browser-sync": "^2.27.5",
    "cross-env": "^6.0.3",
    "del": "^4.1.1",
    "gh-pages": "^2.2.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-changed": "^4.0.3",
    "gulp-concat": "^2.6.1",
    "gulp-csso": "^3.0.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-posthtml": "^3.0.5",
    "gulp-pug": "^5.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.1.1",
    "gulp-svgstore": "^7.0.1",
    "gulp-terser": "^1.4.1",
    "gulp-webp": "^4.0.1",
    "husky": "^4.3.0",
    "posthtml-include": "^1.7.2",
    "stylelint": "^13.7.2",
    "stylelint-config-htmlacademy": "^0.1.4"
  },
  "dependencies": {
    "object-fit-images": "^3.2.4",
    "picturefill": "^3.0.3",
    "svg4everybody": "^2.1.9"
  },
  "browserList": [
    "last 2 versions",
    "IE 11"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
}
